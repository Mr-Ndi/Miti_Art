generator client {
  provider = "prisma-client-go"
  output   = "./miti_art"
  package   = "miti_art"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  VENDOR
  CUSTOMER
}

enum Status {
  PENDING
  SHIPPED
  COMPLETED
}

model User {
  id        String     @id @default(uuid())
  firstName String
  otherName String
  email     String     @unique
  password  String
  salt      String
  role      Role       @default(CUSTOMER)
  Vendor    Vendor?
  Order     Order[]
  Wishlist  Wishlist[]
}

model Vendor {
  userId        String    @id
  user          User      @relation(fields: [userId], references: [id])
  business_name String
  tax_pin       Int       @unique
  approved      Boolean   @default(false)
  Product       Product[]
}

model Product {
  id       String     @id @default(uuid())
  vendor   Vendor     @relation(fields: [vendorId], references: [userId])
  vendorId String
  name     String
  price    Float
  category String
  imageUrl String
  Order    Order[]
  Wishlist Wishlist[]
}

model Order {
  id        String  @id @default(uuid())
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  product   Product @relation(fields: [productId], references: [id])
  productId String
  quantity  Int
  status    Status  @default(PENDING)
}

model Wishlist {
  id        String  @id @default(uuid())
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  product   Product @relation(fields: [productId], references: [id])
  productId String
}
